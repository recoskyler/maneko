<% if (typeof username === "string") { %>
    <%- include("./partials/header.ejs", { username: username }); %> 
<% } else { %>
    <%- include("./partials/header.ejs", { username: null }); %> 
<% } %>

<div class="pageContent">
    <h2>Follows</h2>
    
    <% if (typeof error === "string") { %>
        <%- include("./partials/error.ejs", { error: error }) %>
    <% } %>

    <% if (typeof warning === "string") { %>
        <%- include("./partials/warning.ejs", { warning: warning }) %>
    <% } %>

    <% if (typeof info === "string") { %>
        <%- include("./partials/info.ejs", { info: info }) %>
    <% } %>

    <% list.forEach(chapter => { %>
        <div class="chapter">
            <span class="inlineTitle"><%- chapter.manga %></span>
            <span class="inlineChapter"><%- chapter.title || `Chapter ${chapter.chapter}` %></span>
        </div>
    <% }) %>
</div>